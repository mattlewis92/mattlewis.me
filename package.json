{
  "name": "mattlewis.me",
  "version": "2.0.0",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "start": "ng serve --open",
    "build:browser": "ng build --target=production --environment=prod --aot --extract-css --output-hashing=all",
    "build:server": "ng build --prod --app 1 --output-hashing=false",
    "test": "npm run lint",
    "lint": "ng lint",
    "pre-render": "npm run build:server && node -r @std/esm ./src/pre-render",
    "predeploy": "npm test",
    "deploy": "npm run build:browser && rm -rf docs && mv dist/browser docs && npm run pre-render && npm run blog:build && git add docs && git commit -m \"Build docs site\" && git push",
    "prettier": "prettier --write",
    "precommit": "lint-staged",
    "blog:dev": "npm --prefix blog run start",
    "blog:build": "npm --prefix blog run build"
  },
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mattlewis92/mattlewis.me.git"
  },
  "dependencies": {
    "@angular/animations": "^5.2.2",
    "@angular/common": "^5.2.2",
    "@angular/compiler": "^5.2.2",
    "@angular/core": "^5.2.2",
    "@angular/forms": "^5.2.2",
    "@angular/platform-browser": "^5.2.2",
    "@angular/platform-browser-dynamic": "^5.2.2",
    "@angular/platform-server": "^5.2.2",
    "@angular/router": "^5.2.2",
    "@angular/service-worker": "^5.2.2",
    "bootswatch": "^3.3.7",
    "core-js": "^2.5.3",
    "fastclick": "^1.0.6",
    "font-awesome": "^4.7.0",
    "linkifyjs": "^2.1.5",
    "ngx-bootstrap": "^2.0.2",
    "ngx-page-scroll": "^4.0.2",
    "rxjs": "^5.5.6",
    "zone.js": "^0.8.20"
  },
  "devDependencies": {
    "@angular/cli": "^1.6.6",
    "@angular/compiler-cli": "^5.2.2",
    "@angular/http": "^5.2.2",
    "@angular/language-service": "^5.2.2",
    "@std/esm": "^0.19.7",
    "codelyzer": "^4.1.0",
    "husky": "^0.14.3",
    "lint-staged": "^6.1.0",
    "prettier": "^1.10.2",
    "tslib": "^1.9.0",
    "tslint": "^5.9.1",
    "tslint-config-mwl": "^0.3.0",
    "typescript": "~2.6.2"
  },
  "@std/esm": "cjs",
  "lint-staged": {
    "src/**/*.ts": [
      "npm run prettier",
      "git add"
    ]
  }
}
