{
  "name": "mattlewis.me",
  "version": "2.0.0",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "start": "ng serve --open",
    "build": "ng build --target=production --environment=prod --aot --extract-css --output-hashing=all",
    "test": "npm run lint",
    "lint": "ng lint",
    "pre-render": "ts-node src/pre-render/build-and-execute.ts",
    "predeploy": "npm test",
    "deploy": "npm run build && rm -rf docs && mv dist docs && npm run service-worker && npm run pre-render && git add docs && git commit -m \"Build docs site\" && git push",
    "service-worker": "webpack -p --config=src/service-worker/webpack.config.ts"
  },
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mattlewis92/mattlewis.me.git"
  },
  "dependencies": {
    "@angular/animations": "^4.0.0",
    "@angular/common": "^4.0.0",
    "@angular/compiler": "^4.0.0",
    "@angular/core": "^4.0.0",
    "@angular/forms": "^4.0.0",
    "@angular/http": "^4.0.0",
    "@angular/platform-browser": "^4.0.0",
    "@angular/platform-browser-dynamic": "^4.0.0",
    "@angular/platform-server": "^4.0.0",
    "@angular/router": "^4.0.0",
    "@ng-bootstrap/ng-bootstrap": "^1.0.0-alpha.22",
    "bootswatch": "^3.3.7",
    "core-js": "^2.4.1",
    "fastclick": "^1.0.6",
    "font-awesome": "^4.7.0",
    "linkifyjs": "^2.1.4",
    "localforage": "^1.5.0",
    "ng2-page-scroll": "^4.0.0-beta.6",
    "rxjs": "^5.1.0",
    "uuid": "^3.0.1",
    "zone.js": "^0.8.4"
  },
