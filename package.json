    "@angular/compiler-cli": "^4.0.0",
    "@angular/language-service": "^4.0.0",
    "@angular/service-worker": "^1.0.0-beta.8",
    "@ngtools/webpack": "^1.3.0",
    "@types/node": "^7.0.11",
    "awesome-typescript-loader": "^3.1.2",
    "codelyzer": "^3.0.0",
    "memory-fs": "^0.4.1",
    "raw-loader": "^0.5.1",
    "ts-node": "^3.0.2",
    "tslint": "^5.1.0",
    "typescript": "~2.2.0",
    "webpack": "^2.3.2"
  }
